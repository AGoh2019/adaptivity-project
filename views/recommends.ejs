<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

    <body>
        <h2 class="h2 index">AI Recommends</h2>
        <% if (jobs.length> 0) {%>
            <% jobs.forEach(job=> { %>
                <h2 class="h1 index">
                    <%= job.name %>
                </h2>
                <p class="dummy-text" style="text-align: center;">
                    <%= job.description %>
                </p>

                <% }) %>
                    <% } else { %>
                        <p>Find another job</p>
                        <% } %>
    </body>

</html>